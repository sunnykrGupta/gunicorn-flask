
echo "updater"
#```py
sudo apt-get install -y python python-pip python-virtualenv gunicorn
sudo yum -y python python-pip python-virtualenv gunicorn
#```

echo "Set up Flask
echo "Start by creating a new directory, “/home/www”, to store the project"

sudo mkdir ~/www && cd ~/www

echo "Then create and activate a virtualenv:"

sudo virtualenv env
source env/bin/activate

echo "Install the Flask:"
sudo pip install Flask==0.10.1
